@model IEnumerable<EmployeeMonthlyTime>
@using System.Text.Json

<style>
    body, html {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }

    .custom-table {
        border-collapse: collapse;
        width: 100%;
    }

    .custom-table th, .custom-table td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
    }

    .custom-table th {
        background-color: #eaeaea;
        color: #333;
    }

    .custom-table tbody tr.table-danger {
        background-color: #f8d7da;
    }
</style>

<table class="custom-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Total time in month</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            var rowClass = employee.TotalTimeInHours < 100 ? "table-danger" : "";

            <tr class="@rowClass">
                <td>@employee.EmployeeName</td>
                <td>@employee.TotalTimeInHours.ToString("0 hrs")</td>
                <td><a href="#" class="btn btn-link">Edit</a></td>
            </tr>
        }
    </tbody>
</table>